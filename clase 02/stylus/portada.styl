.Portada
	background #4D7B8B
	background-image url('../imagenes/portada.jpg')
	background-size cover
	background-repeat no-repeat
	&__box
		text-align center
		maring 0 auto
		padding 3em 0
	h2
		font-size 2.5em
		margin-bottom .8em
		text-transform uppercase
		color white
		text-shadow rgba(0,0,0, .5) 0px 0px 10px
		
	a
		font-size 1.5em
		text-decoration none
		background #2DCC70
		border-radius 30px
		padding .8em
		color white
		
		&:hover
			background #2DCC10
			

@media (min-width 700px)
	.Portada
		&__box
			padding 8em 0
		h2
			font-size 3em
			margin-bottom 1.5em
			
		a
			font-size 2em
			padding .8em
			border-radius 50px
			
	
			